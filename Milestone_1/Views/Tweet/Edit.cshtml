@model Milestone_1.models.Tweets

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Tweets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="UserDataForeignKey" class="control-label"></label>
                <select asp-for="UserDataForeignKey" class="form-control" asp-items="ViewBag.UserDataForeignKey"></select>
                <span asp-validation-for="UserDataForeignKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tweetText" class="control-label"></label>
                <input asp-for="tweetText" class="form-control" />
                <span asp-validation-for="tweetText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post_date" class="control-label"></label>
                <input asp-for="post_date" class="form-control" />
                <span asp-validation-for="post_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupForeignKey" class="control-label"></label>
                <select asp-for="GroupForeignKey" class="form-control" asp-items="ViewBag.GroupForeignKey"></select>
                <span asp-validation-for="GroupForeignKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>  
<script src="~/Scripts/jquery.validate.min.js"></script>  
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>  
<div>
